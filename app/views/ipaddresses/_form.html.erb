  </li>
    <li class="list-group-item">
    Select which IP address you wish to assign.<br><br>
    <%= f.label "Ip Address" %> 
    <div id="unips">
          <select name="ips">
            <option value="">--Select Ip--</option>
          </select>
    <div>
  </ul>
</div>
  <div class="actions">
    <%= f.submit "Add Ip Address Assignment" %>
  </div>
<% end %>
