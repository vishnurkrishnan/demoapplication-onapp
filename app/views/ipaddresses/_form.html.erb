<%= form_for(@ipaddress) do |f| %>
  <% if @ipaddress.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ipaddress.errors.count, "error") %> prohibited this ipaddress from being saved:</h2>

      <ul>
      <% @ipaddress.errors.full_messages.each do |msg| %>
