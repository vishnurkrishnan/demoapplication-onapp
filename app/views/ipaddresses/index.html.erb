<h3>IP Addresses</h3>

<table class="table table-hover success">
  <thead>
    <tr class="success">
      <th>IP Address</th>
      <th>Interface</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ipaddresses.each do |ipaddress|  %>
      <tr>
        <td><%= ipaddress.ip_address %></td>
        <td><%= ipaddress.interface %></td>
        <td><%= link_to 'Destroy', virtualmachine_ipaddress_path(ipaddress.virtualmachine_id,ipaddress.id), method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn btn-danger' %></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

